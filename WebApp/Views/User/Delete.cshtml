@model UserResponse

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <table>
        <tr>
            <td>Name</td>
            <td>@Model.Name</td>
        </tr>
    </table>

    <form asp-action="DeleteConfirmed" method="post">

        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a asp-action="Index">Cancel</a>
</div>
